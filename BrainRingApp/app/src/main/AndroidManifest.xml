<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.zhenkondrat.brainringapp" >

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MenuActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Server.CreateGameActivity"
            android:label="@string/title_activity_create_game" >
        </activity>
        <activity
            android:name=".Client.SingInGameActivity"
            android:label="@string/title_activity_sing_in_game" >
        </activity>
        <activity
            android:name=".Client.TeamInGameActivity"
            android:label="@string/title_activity_team_in_game" >
        </activity>
        <activity
            android:name=".Client.TeamActivity"
            android:label="@string/title_activity_team" >
        </activity>
        <activity
            android:name=".TestActivity"
            android:label="@string/title_activity_test" >
        </activity>
    </application>

</manifest>
